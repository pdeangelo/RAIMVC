@model List<RAI_MVC.Models.User>
@{
    ViewBag.Title = "Users";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

@using (Html.BeginForm("UserEdit", "RAI", FormMethod.Post))
{
    <div class="col-lg-12">
        <table class="table table-striped" id="ClientTable">
            <tr class="d-flex">
                <th>User ID</th>
                <th>User Name</th>
                <th>Role</th>
                <th>Is Admin</th>
                <th class="col-lg-3">&nbsp;</th>
            </tr>
            @for (int index = 0; index < Model.Count; index++)
            {
            <tr>
                <td>@Model[index].WinUserID</td>
                <td>@Model[index].UserName</td>
                <td>@Model[index].Role.RoleName</td>
                <td>@Model[index].IsAdmin</td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("EditUser", new { id = @Model[index].UserID })" class="btn btn-warning btn-sm margin-right">
                            <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> </span>
                        </a>
                        <a href="@Url.Action("DeleteUser", new { id = @Model[index].UserID })" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> </span>
                        </a>
                    </div>
                </td>
            </tr>
            }

        </table>
    </div>
}

